<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="truck_form_view">
            <field name="name">truck.form</field>
            <field name="model">truck</field>
            <field name="inherit_id" ref="vehicle.vehicle_form_view"/>
            <field name="arch" type="xml">
                <div position="after">
                    <group name="info">
                        <group name="driver">
                            <field name="driver"/>
                            <field name="car_plates"/>
                        </group>
                    </group>
                </div>
                <group name="weights" position="inside">
                    <group col="3">
                        <field name="input_kilos"/>
                    </group>
                    <group col="3">
                        <field name="output_kilos"/>
                    </group>
                </group>
            </field>
        </record>
    </data>
</openerp>
